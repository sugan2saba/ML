#############################################

# ---------- Django ----------
DJANGO_SECRET_KEY=dev-secret-change-me
DEBUG=1
ALLOWED_HOSTS=*

# API behavior
THRESHOLD=0.5
PRED_LOG_DIR=logs

# ---------- Model loading mode ----------
# local  -> load a .joblib on disk (MODEL_PATH)
# mlflow -> load from MLflow Model Registry (TRACKING_URI + NAME/STAGE)
MODEL_SOURCE=local

# If MODEL_SOURCE=local:
# - When running Django from repo root (python api/manage.py runserver), use this:
MODEL_PATH=../artifacts/model_pipeline.joblib
# - If you run Django from inside "api/" (rare), set:
# MODEL_PATH=../artifacts/model_pipeline.joblib

# If MODEL_SOURCE=mlflow:
# MLFLOW_TRACKING_URI can be your local server; inside Docker on Mac/Win use host.docker.internal
MLFLOW_TRACKING_URI=http://127.0.0.1:5000
# Either set full URI or let loader compose from NAME + STAGE:
# MLFLOW_MODEL_URI=
MLFLOW_MODEL_NAME=MediWatchReadmit
MLFLOW_MODEL_STAGE=Production

# If your MLflow server requires auth:
# MLFLOW_TRACKING_USERNAME=
# MLFLOW_TRACKING_PASSWORD=

# ---------- Airflow (optional convenience; Airflow compose also sets these) ----------
AIRFLOW__CORE__LOAD_EXAMPLES=False

# ---------- Misc ----------
# Ensures pandas/pyarrow write deterministic schemas, if you use them
PYARROW_IGNORE_TIMEZONE=1
